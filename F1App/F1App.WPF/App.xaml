<Application x:Class="F1App.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:F1App.WPF"
             xmlns:viewModels="clr-namespace:F1App.WPF.ViewModels"
             xmlns:views="clr-namespace:F1App.WPF.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="F1Font"
               TargetType="TextBlock">

            <Setter Property="FontFamily" Value="/Resources/Font Families/Formula1-Wide_web_0.ttf #Formula1 Display Wide"/>
            
        </Style>
        
        <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:DriversViewModel}">
            <views:DriversView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:WinnersViewModel}">
            <views:WinnersView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:GrandsPrixViewModel}">
            <views:GrandsPrixView/>
        </DataTemplate>
    </Application.Resources>
</Application>
